{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Service 1 (node)",
      "port": 30006, // Port is port number exposed in values.dev.yaml
      "address": "localhost",
      "localRoot": "${workspaceFolder}/service1", // service1 is physical path to service
      "remoteRoot": "/app", // remoteRoot is path inside container (see Dockerfile)
      "protocol": "inspector",
      "sourceMaps": true
    },
    {
      "name": "Service 2 (.net)",
      "type": "coreclr",
      "request": "attach",
      "sourceFileMap": {
        "/code/app": "${workspaceRoot}/service2/src" // service2 is physical path to service
      },
      "processId": "${command:pickRemoteProcess}",
      "pipeTransport": {
        "windows": {
          "pipeProgram": "powershell",
          "pipeArgs": [".vscode\\dotnet-win-debug.ps1"], // To debug correctly here we actually need to edit the script :(
          "quoteArgs": false
        },
        "linux": {
          "pipeProgram": "bash",
          "pipeArgs": [
            "./dotnet-linux-debug.sh",
            "--selector app=service2",
            "--namespace default"
          ],
          "quoteArgs": false
        },
        "pipeCwd": "${workspaceFolder}",
        "debuggerPath": "/vsdbg/vsdbg"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Handover options (node)",
      "port": 30007, // Port is port number exposed in values.dev.yaml
      "address": "localhost",
      "localRoot": "${workspaceFolder}/handover-options", // stores is physical path to service
      "remoteRoot": "/app", // remoteRoot is path inside container (see Dockerfile)
      "protocol": "inspector",
      "sourceMaps": true
    }
    {
      "type": "node",
      "request": "attach",
      "name": "Stores (node)",
      "port": 30008, // Port is port number exposed in values.dev.yaml
      "address": "localhost",
      "localRoot": "${workspaceFolder}/stores", // stores is physical path to service
      "remoteRoot": "/app", // remoteRoot is path inside container (see Dockerfile)
      "protocol": "inspector",
      "sourceMaps": true
    }
  ]
}